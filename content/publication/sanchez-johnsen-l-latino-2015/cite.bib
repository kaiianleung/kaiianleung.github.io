 journal = {Hispanic health care international : the official journal of the National Association of Hispanic Nurses},
 note = {Place: United States},
 number = {1},
 pages = {8--18},
 title = {Latino community-based participatory research studies: a model for conducting bilingual translations},
 volume = {13},
